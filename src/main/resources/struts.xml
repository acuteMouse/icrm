<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
	"http://struts.apache.org/dtds/struts-2.1.dtd">

<struts>

	<!-- 在写路径时，需要把namespace加到action之前 -->
	<package namespace="/user" name="user" extends="struts-default">
		<action name="user_*" class="com.cgl.action.UserAction" method="{1}">
			<result name="{1}">/jsp/{1}.jsp</result>
			<result name="success">/jsp/main.jsp</result>
			<result name="fail">/jsp/login.jsp</result>
		</action>
	</package>


</struts>
	
