<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
        "http://struts.apache.org/dtds/struts-2.1.dtd">

<struts>

    <constant name="struts.devMode" value="true"/>
    <constant name="struts.i18n.encoding" value="utf-8"/>

    <!--用户-->
    <!-- 在写路径时，需要把namespace加到action之前 -->
    <package name="user" namespace="/user" extends="json-default">
        <global-results>
            <result type="json">
                <param name="root">dateMap</param>
            </result>
        </global-results>
        <!--用户CURD,登陆，注销-->
        <action name="user_*" class="com.cgl.action.UserAction" method="{1}">
            <result name="signOut">/jsp/login.jsp</result>
            <result name="loginSuccess">/jsp/main.jsp</result>
            <result name="loginFail">/jsp/login.jsp</result>
        </action>

        <action name="user_getAll" class="com.cgl.action.UserAction" method="getAll"></action>
        <!--用户部门-->
        <action name="department_*" class="com.cgl.action.DepartmentAction" method="{1}"></action>
        <!--用户类型-->
        <action name="userType_*" class="com.cgl.action.UserTypeAction" method="{1}"></action>
    </package>
    <!--客户-->
    <package name="customer" namespace="/customer" extends="json-default">
        <!--配置全局返回值-->
        <global-results>
            <result type="json">
                <param name="root">dateMap</param>
            </result>
        </global-results>
        <!--客户CURD-->
        <action name="customer_*" class="com.cgl.action.CustomerAction" method="{1}">
            <result name="{1}">/jsp/client/{1}.jsp</result>
        </action>
        <!--获取所有客户-->
        <action name="getAllCustomer" class="com.cgl.action.CustomerAction" method="getAllCustomer"></action>
        <!--异步加载客户类型-->
        <action name="getCustomerType" class="com.cgl.action.CustomerAction" method="getCustomerType"></action>
        <!--异步加载行业-->
        <action name="getIndustryType" class="com.cgl.action.CustomerAction" method="getIndustryType"></action>
        <!--客户类型CRUD-->
        <action name="customerType_*" class="com.cgl.action.CustomerTypeAction" method="{1}"></action>
        <!--行业CRUD-->
        <action name="industry_*" class="com.cgl.action.IndustryAction" method="{1}"></action>
    </package>
</struts>
	
